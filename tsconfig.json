{
    "compilerOptions": {
        "baseUrl": ".",
        "alwaysStrict": true,
        "sourceMap": true,
        "removeComments": true,
        "target": "esnext",
        "module": "esnext",
        "lib": ["es5", "es6", "dom", "es2015", "esnext.asynciterable"],
        "moduleResolution": "node",
        "allowJs": false,
        "checkJs": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@src/*": ["src/*"],
            "@infrastructure/*": ["infrastructure/*"],
            "@test/*": ["test/*"],
            "@shared/*": ["shared/*"]
        },
        "typeRoots": ["node_modules/@types", "typings"]
    },
    "include": ["src/**/*", "infrastructure/**/*", "shared/**/*", "test/**/*"],
    "exclude": ["node_modules", "coverage"]
}
